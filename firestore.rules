rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /drills/{drillId} {
      // Allow creation if the userId in the data matches the authenticated user
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Allow update/delete if the existing userId matches the authenticated user
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      
      // Allow read if the existing userId matches the authenticated user
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
